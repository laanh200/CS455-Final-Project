<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/net_Budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/net_Budget"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="207dp"
            android:layout_height="173dp"
            android:contentDescription="This is the app logo"
            app:layout_constraintBottom_toTopOf="@+id/current_month_expense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/net_Budget"
            app:srcCompat="@drawable/pig_logo" />

        <TextView
            android:id="@+id/current_month_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/current_month_expense"
            app:layout_constraintBottom_toTopOf="@+id/add_new_monthly_expense_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_logo" />

        <Button
            android:id="@+id/add_new_monthly_expense_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint ="#002C73"
            android:text="@string/add_new_month_expense_button"


            app:layout_constraintBottom_toTopOf="@+id/current_month_income"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_month_expense" />

        <TextView
            android:id="@+id/current_month_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_month_income"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/add_new_monthly_income_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_new_monthly_expense_button" />

        <Button
            android:id="@+id/add_new_monthly_income_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_month_income_button"
            android:backgroundTint ="#002C73"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_month_income" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:itemTextAppearance="@style/NavigationViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_view_header"
        app:menu="@menu/nav_view_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        />


</androidx.drawerlayout.widget.DrawerLayout>